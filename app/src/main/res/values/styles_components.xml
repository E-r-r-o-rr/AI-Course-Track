<resources>
    <style name="Horizon.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/bg_toolbar_glass</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/glass_highlight</item>
    </style>

    <style name="Horizon.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/glass_surface</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/glass_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Horizon.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/btn_primary_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Horizon.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/glass_surface_alt</item>
        <item name="strokeColor">@color/glass_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Horizon.Button.Segmented" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/toggle_button_bg</item>
        <item name="strokeColor">@color/toggle_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:textColor">@color/toggle_button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Horizon.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/glass_chip_surface</item>
        <item name="chipSurfaceColor">@color/glass_chip_surface</item>
        <item name="chipStrokeColor">@color/glass_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/radius_md</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Horizon.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/glass_chip_surface</item>
        <item name="chipSurfaceColor">@color/glass_chip_surface</item>
        <item name="chipStrokeColor">@color/glass_chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="Horizon.Chip.Action" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/glass_surface_alt</item>
        <item name="chipSurfaceColor">@color/glass_surface_alt</item>
        <item name="chipStrokeColor">@color/glass_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/radius_md</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipIconStartPadding">8dp</item>
        <item name="chipIconEndPadding">8dp</item>
    </style>
</resources>
