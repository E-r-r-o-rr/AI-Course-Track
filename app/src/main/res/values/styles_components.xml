<resources>
    <style name="Horizon.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/gradient_brand</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>

    <style name="Horizon.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/md_sys_color_surface</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Horizon.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_primary_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
    </style>

    <style name="Horizon.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/gray_50</item>
        <item name="chipSurfaceColor">@color/gray_50</item>
        <item name="chipStrokeColor">@color/md_sys_color_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">@dimen/radius_md</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="Horizon.Chip.Assist" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/avatarPurple</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
