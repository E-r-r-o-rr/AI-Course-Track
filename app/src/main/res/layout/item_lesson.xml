<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Horizon.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_play_circle_24"
            app:tint="@color/brand_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/blue_primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prompt Engineering Basics"
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintEnd_toStartOf="@id/chipStatus"
            android:layout_marginStart="12dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            style="@style/Horizon.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODO"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/due"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/gray_700"
            android:text="Due: Fri 5pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="@style/Horizon.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Start Session"
            app:layout_constraintTop_toBottomOf="@+id/due"
            app:layout_constraintStart_toStartOf="@id/title"
            android:layout_marginTop="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


